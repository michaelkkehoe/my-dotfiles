# Tell OSX to sleep
alias deepsleep="pmset displaysleepnow"
alias afk="osascript -e 'tell application \"System Events\" to keystroke \"q\" using {control down, command down}'"
# Flush Directory Service cache
alias dnsflush="dscacheutil -flushcache"

# Empty the Trash on all mounted volumes and the main HDD
# Also, clear Appleâ€™s System Logs to improve shell startup speed
alias emptytrash="sudo rm -rfv /Volumes/*/.Trashes; sudo rm -rfv ~/.Trash; sudo rm -rfv /private/var/log/asl/*.asl"

# Force OSX to check for software updates
alias osxu="softwareupdate -l"
